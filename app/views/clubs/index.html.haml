.page-header
  = link_to new_club_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Club
  %h1 Listing clubs

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Number
        %th Location
        %th Email
        %th Site
        %th Telephone
        %th
        %th
        %th

    %tbody
      - @clubs.each do |club|
        %tr
          %td= club.name
          %td= club.number
          %td= club.location
          %td= club.email
          %td= club.site
          %td= club.telephone
          %td= link_to 'Show', club
          %td= link_to 'Edit', edit_club_path(club)
          %td= link_to 'Destroy', club, :data => { confirm: 'Are you sure?' }, :method => :delete
